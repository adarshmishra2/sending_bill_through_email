<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishekpc.bevrageorder.MainActivity">

    <TextView
        android:id="@+id/Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Items"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/Quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity Order"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="150dp"
        />
    <TextView
        android:id="@+id/Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="300dp"
        />
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chilli_Potato"
        android:layout_below="@+id/Item"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/ord1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Quantity"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_alignBaseline="@+id/ord1"
        android:text="40"
        />
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coke"
        android:layout_below="@+id/checkbox1"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/ord2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ord1"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_alignBaseline="@+id/ord2"
        android:text="25"
        />
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:layout_below="@+id/checkbox2"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/ord3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ord2"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_alignBaseline="@+id/ord3"
        android:text="300"
        />
    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subway_Sandwich"
        android:layout_below="@+id/checkbox3"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/ord4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ord3"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/price4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_alignBaseline="@+id/ord4"
        android:text="70"
        />
    <CheckBox
        android:id="@+id/checkbox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Icecream"
        android:layout_below="@+id/checkbox4"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/ord5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ord4"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/price5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_alignBaseline="@+id/ord5"
        android:text="35"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userid"
        android:text="Your Email id: "
        android:layout_below="@+id/checkbox5"
        android:layout_marginTop="45dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailid"
        android:layout_below="@+id/checkbox5"
        android:layout_toRightOf="@+id/userid"
        android:layout_marginTop="45dp"
        />
    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>
